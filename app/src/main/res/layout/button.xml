<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">


    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control Bootloader Lock"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/unlockBl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:onClick="unlockBl"
        android:text="Unlock Bootloader" />

    <Button
        android:id="@+id/lockBl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Lock Bootloader" android:layout_margin="5dp" />

</LinearLayout>
